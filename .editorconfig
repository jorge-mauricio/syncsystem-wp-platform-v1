root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# PHP files
[*.{php,phtml}]
indent_size = 4

# JavaScript and TypeScript files
[*.{ts,tsx,js,jsx,json,css,scss,md}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# .gitignore
# dependencies
/node_modules
/.pnp
.pnp.js

# testing
/coverage

# next.js
/.next/
/out/

# production
/build

# misc
.DS_Store
*.pem

# debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# local env files
.env*.local

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts
